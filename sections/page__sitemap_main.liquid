{%- render 'vite-tag' with '@/additionalEntrypoints/blog/article.css' -%}

<article itemscope>
  <div class="text-center py-6 bg-brand-30 mt-4 px-4">
    <h1 class="text-brand-700 text-xl font-bold xl:text-3xl">{{ page.title }}</h1>
  </div>

  <div class="py-6 px-4 sl-container mx-auto xl:py-8">
    <div class="sl-default-text-formatting mt-6">
      {{ page.content }}

      <div class="grid gap-6 sm:grid-cols-2 sm:gap-8 lg:grid-cols-4 lg:gap-12">
        <div>
          <p class="text-2xl text-brand-600">עמודים</p>

          <ul>
            {% for link in linklists['all-pages'].links %}
              <li>
                <a href="{{ link.url }}">{{ link.title }}</a>
              </li>
            {% endfor %}
          </ul>
        </div>

        <div>
          <p class="text-2xl text-brand-600">קולקציות</p>

          <ul>
            {% for collection in collections %}
              <li>
                <a href="{{ collection.url }}">{{ collection.title }}</a>
              </li>
            {% endfor %}
          </ul>
        </div>

        <div>
          <p class="text-2xl text-brand-600">מוצרים</p>

          <ul>
            {% paginate collections.all.products by 1000 %}
              {% for product in collections.all.products %}
                <li>
                  <a href="{{ product.url }}">{{ product.title }}</a>
                </li>
              {% endfor %}
            {% endpaginate %}
          </ul>
        </div>

        <div>
          <p class="text-2xl text-brand-600">בלוג</p>

          <ul>
            {% paginate blogs['בלוג'].articles by 1000 %}
              {% for article in blogs['בלוג'].articles %}
                <li>
                  <a href="{{ article.url }}">{{ article.title }}</a>
                </li>
              {% endfor %}
            {% endpaginate %}
          </ul>
        </div>
      </div>
    </div>
  </div>
</article>
