<!-- sections/hero-banner.liquid -->
<div class="hero-banner-wrapper">
  <div class="hero-banner-slider">
    {% for block in section.blocks %}
      <div class="hero-slide {% if forloop.first %}active{% endif %}" data-slide="{{ forloop.index0 }}">
        <div class="hero-banner">
          {% if block.settings.image %}
            <div class="hero-image">
              {{ block.settings.image | image_url: width: 1920 | image_tag: loading: 'lazy', alt: block.settings.title }}
            </div>
          {% endif %}
          
          <div class="hero-overlay"></div>
          
          <div class="hero-content">
            <div class="hero-text-block">
              {% if block.settings.title %}
                <h2 class="hero-title">{{ block.settings.title }}</h2>
              {% endif %}
              
              {% if block.settings.description %}
                <p class="hero-description">{{ block.settings.description }}</p>
              {% endif %}
              
              {% if block.settings.button_text and block.settings.button_url %}
                <a href="{{ block.settings.button_url }}" class="hero-button">
                  {{ block.settings.button_text }}
                </a>
              {% endif %}
              
              <div class="desktop-pagination">
                {% if section.blocks.size > 1 %}
                  <div class="hero-pagination">
                    {% for block in section.blocks %}
                      <button class="pagination-dot {% if forloop.first %}active{% endif %}" data-slide="{{ forloop.index0 }}"></button>
                    {% endfor %}
                  </div>
                {% endif %}
              </div>
            </div>
          </div>
        </div>
      </div>
    {% endfor %}
  </div>
  
  <div class="mobile-pagination">
    {% if section.blocks.size > 1 %}
      <div class="hero-pagination">
        {% for block in section.blocks %}
          <button class="pagination-dot {% if forloop.first %}active{% endif %}" data-slide="{{ forloop.index0 }}"></button>
        {% endfor %}
      </div>
    {% endif %}
  </div>
</div>

<style>
.hero-banner-wrapper {
  position: relative;
  width: 100%;
  overflow: hidden;
}

.hero-banner-slider {
  position: relative;
  width: 100%;
}

.hero-slide {
  display: none;
  position: relative;
}

.hero-slide.active {
  display: block;
}

.hero-banner {
  position: relative;
  width: 100%;
  height: 600px;
  overflow: hidden;
}

.hero-image {
  position: absolute;
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
  z-index: 1;
}

.hero-image img {
  width: 100%;
  height: 100%;
  object-fit: cover;
}

.hero-overlay {
  position: absolute;
  top: 0;
  right: 0;
  width: 618px;
  height: 100%;
  background-image: linear-gradient(
    270deg,
    rgba(79, 59, 50, 1)   3%,
    rgba(79, 59, 50, 1)  37%,
    rgba(79, 59, 50, 0.8) 61%,
    rgba(79, 59, 50, 0.45) 80%,
    rgba(79, 59, 50, 0)  100%
  );
  z-index: 2;
}

.hero-content {
  position: absolute;
  top: 0;
  right: 0;
  width: 618px;
  height: 100%;
  display: flex;
  align-items: center;
  justify-content: flex-start;
  z-index: 3;
}

.hero-text-block {
  padding-right: 120px;
  max-width: 500px;
  text-align: right;
  color: white;
}

.hero-title {
  font-size: 52px;
  font-weight: bold;
  line-height: 1.2;
  margin: 0 0 20px 0;
}

.hero-description {
  font-size: 22px;
  line-height: 1.4;
  margin: 0 0 30px 0;
  opacity: 0.9;
}

.hero-button {
  display: inline-block;
  width: 290px;
  height: 60px;
  background-color: #574239;
  color: white;
  text-decoration: none;
  font-size: 22px;
  font-weight: 500;
  border-radius: 37px;
  border: 1px solid white;
  display: flex;
  align-items: center;
  justify-content: center;
  transition: all 0.3s ease;
  margin-left: auto;
}

.hero-button:hover {
  background-color: #6B4C42;
  border-color: #f0f0f0;
  color: white;
}

.hero-pagination {
  display: flex;
  gap: 8px;
  margin-top: 30px;
}

.desktop-pagination {
  display: block;
}

.mobile-pagination {
  display: none;
  position: absolute;
  bottom: 13px;
  left: 50%;
  transform: translateX(-50%);
  z-index: 4;
}

.pagination-dot {
  width: 10px;
  height: 10px;
  border-radius: 50%;
  border: none;
  background-color: #6D574B;
  cursor: pointer;
  transition: background-color 0.3s ease;
}

.pagination-dot.active {
  background-color: #DD2D4A;
}

.pagination-dot:hover {
  background-color: #DD2D4A;
}

@media (max-width: 768px) {
  .hero-banner {
    height: 406px;
    display: block;
    position: relative;
  }
  
  .hero-image {
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    z-index: 1;
  }
  
  .hero-overlay {
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    height: 60%;
    background-image: linear-gradient(
      180deg,
      rgba(79, 59, 50, 1) 0%,
      rgba(79, 59, 50, 0.95) 20%,
      rgba(79, 59, 50, 0.9) 35%,
      rgba(79, 59, 50, 0.85) 50%,
      rgba(79, 59, 50, 0.7) 65%,
      rgba(79, 59, 50, 0.4) 80%,
      rgba(79, 59, 50, 0.1) 90%,
      rgba(79, 59, 50, 0) 100%
    );
    z-index: 2;
  }
  
  .hero-content {
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    display: flex;
    align-items: flex-start;
    justify-content: center;
    padding-top: 24px;
    z-index: 3;
  }
  
  .hero-text-block {
    padding: 0 20px;
    text-align: center;
    max-width: 100%;
    width: 100%;
  }
  
  .hero-title {
    font-size: 26px;
    margin: 0 0 16px 0;
  }
  
  .hero-description {
    font-size: 12px;
    margin: 0 0 20px 0;
  }
  
  .hero-button {
    width: 204px;
    height: 40px;
    font-size: 16px;
    margin: 0 auto 20px auto;
  }
  
  .desktop-pagination {
    display: none;
  }
  
  .mobile-pagination {
    display: block;
  }
  
  .mobile-pagination .pagination-dot {
    width: 8px;
    height: 8px;
    background-color: #FFFFFF;
  }
  
  .mobile-pagination .pagination-dot.active {
    background-color: #DD2D4A;
  }
}

@media (max-width: 480px) {
  .hero-banner {
    height: 406px;
  }
  
  .hero-title {
    font-size: 24px;
  }
  
  .hero-description {
    font-size: 11px;
  }
  
  .hero-button {
    width: 180px;
    height: 36px;
    font-size: 14px;
  }
}
</style>

<script>
document.addEventListener('DOMContentLoaded', function() {
  const slides = document.querySelectorAll('.hero-slide');
  
  function showSlide(index) {
    slides.forEach((slide, i) => {
      slide.classList.remove('active');
    });
    
    if (slides[index]) {
      slides[index].classList.add('active');
    }
    
    const allDots = document.querySelectorAll('.pagination-dot');
    allDots.forEach((dot, i) => {
      dot.classList.remove('active');
    });
    
    const dotsToActivate = document.querySelectorAll(`[data-slide="${index}"]`);
    dotsToActivate.forEach(dot => {
      dot.classList.add('active');
    });
  }

  showSlide(0);

  document.addEventListener('click', function(e) {
    if (e.target.classList.contains('pagination-dot')) {
      const slideIndex = parseInt(e.target.getAttribute('data-slide'));
      showSlide(slideIndex);
    }
  });
});
</script>

