{%- render 'vite-tag' with '@/additionalEntrypoints/blog/article.css' -%}

<article itemscope>
  <div class="text-center py-6 bg-brand-30 mt-4 px-4">
    <h1 class="text-brand-700 text-xl font-bold xl:text-3xl">{{ section.settings.title | default: page.title }}</h1>

    {%- if section.settings.subtitle -%}
      <p class="text-grey-900/60 leading-none mt-1">{{ section.settings.subtitle }}</p>
    {%- endif -%}
  </div>

  <div class="py-6 px-4 max-w-2xl mx-auto xl:py-8">
    <div class="sl-default-text-formatting mt-6">
      {{- page.content -}}
    </div>
  </div>
</article>

{%- schema -%}
{
  "name": "Page main",
  "settings": [
    {
      "type": "text",
      "id": "title",
      "label": "Title",
      "info": "The title of the page that will be displayed instead of the default one."
    },
    {
      "type": "textarea",
      "id": "subtitle",
      "label": "Subtitle"
    }
  ]
}
{%- endschema -%}
