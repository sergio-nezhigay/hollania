<section class="big-banner">
  <div class="banner__content">
    {% if section.settings.title %}
      <h2 class="banner__title">{{ section.settings.title }}</h2>
    {% endif %}
    {% if section.settings.text %}
      <p class="banner__text">{{ section.settings.text }}</p>
    {% endif %}
    {% if section.settings.button_text and section.settings.button_link %}
      <a href="{{ section.settings.button_link }}" class="banner__button">{{ section.settings.button_text }}</a>
    {% endif %}
  </div>
</section>

<style>
.big-banner {
  position: relative;
  width: 100%;
  height: 978px;
  background-size: cover;
  background-position: center;
  background-image: url({{ section.settings.background_image | img_url: 'master' }});
}
.banner__content {
  position: absolute;
  top: 100px;
  left: 50%;
  transform: translateX(-50%);
  width: 1200px;
  height: 225px;
  display: flex;
  flex-direction: column;
  align-items: center;
  text-align: center;
  z-index: 1;
}
.banner__title {
  font-size: 56px;
  margin: 0 0 16px;
  color: #ffffff;
}
.banner__text {
  font-size: 20px;
  margin: 0 0 16px;
  color: #ffffff;
  max-width: 802px;
}
.banner__button {
  display: inline-block;
  width: 214px;
  height: 66px;
  line-height: 66px;
  font-size: 26px;
  background-color: #DD2D4A;
  color: #ffffff;
  text-decoration: none;
  border-radius: 35px;
  text-align: center;
  transition: filter 0.3s ease;
}
.banner__button:hover {
  filter: brightness(85%);
}

@media screen and (max-width: 749px) {
  .big-banner {
    height: 460px;
    background-image: url({{ section.settings.background_image_mobile | img_url: 'master' }});
  }
  .banner__content {
    top: 37px;
    width: 338px;
    height: 180px;
  }
  .banner__title {
    font-size: 30px;
    margin: 0 0 0px;
  }
  .banner__text {
    font-size: 14px;
    margin: 0 0 16px;
    max-width: 326px;
  }
  .banner__button {
    width: 132px;
    height: 42px;
    line-height: 42px;
    font-size: 14px;
    border-radius: 20px;
  }
}
</style>

{% schema %}
{
  "name": "Big Banner",
  "settings": [
    {
      "type": "image_picker",
      "id": "background_image",
      "label": "Background image (desktop)"
    },
    {
      "type": "image_picker",
      "id": "background_image_mobile",
      "label": "Background image (mobile)"
    },
    {
      "type": "text",
      "id": "title",
      "label": "Title",
      "default": "Tempur Mattresses"
    },
    {
      "type": "textarea",
      "id": "text",
      "label": "Main text",
      "default": "The worldâ€™s best mattresses with the Tempur Advanced formulation developed by NASA labs, uniquely engineered to relieve pressure and support your body."
    },
    {
      "type": "text",
      "id": "button_text",
      "label": "Button text",
      "default": "View All Mattresses"
    },
    {
      "type": "url",
      "id": "button_link",
      "label": "Button link",
    }
  ],
  "presets": [
    {
      "name": "Big Banner",
      "category": "Hero"
    }
  ]
}
{% endschema %}
