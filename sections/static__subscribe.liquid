<div class="subscribe-section">
  <div class="subscribe-container">
    <div class="subscribe-header">
      <h2 class="subscribe-title">נשמח לעמוד לשירותכם בכל עת</h2>
      <div class="subscribe-subtitle">השאירו פרטיכם ונחזור אליכם בהקדם</div>
    </div>
    {%- form 'customer' -%}
      <input type="hidden" name="contact[tags]" value="newsletter">
      <div class="subscribe-form">
        {%- if form.posted_successfully? -%}
          <span
            dir="ltr"
            class="subscribe-success"
            id="ContactFooter-success"
            autofocus
          >
            תודה שנרשמת למועדון הלקוחות של סילי
          </span>
        {%- else -%}
          <input
            type="text"
            name="contact[first_name]"
            placeholder="שם מלא"
            class="subscribe-input"
          >
          <input
            type="email"
            required
            name="contact[email]"
            placeholder="דואר אלקטרוני"
            class="subscribe-input"
          >
          <input
            type="tel"
            pattern="\+?\d+"
            name="contact[note]"
            placeholder="מספר טלפון"
            class="subscribe-input"
          >
          <label class="subscribe-checkbox-label">
            <input
              type="checkbox"
              checked
              name="accepts_marketing"
              required
              class="subscribe-checkbox"
            >
            <span class="subscribe-checkbox-custom"></span>
            <span class="subscribe-checkbox-text">אני מאשר קבלת מבצעים והטבות בדוא"ל או סמס</span>
          </label>
          <button type="submit" class="subscribe-btn">הצטרפו</button>
          {%- if form.errors -%}
            <span
              dir="ltr"
              class="subscribe-error"
              id="ContactFooter-error"
              autofocus
            >
              {{- form.errors.translated_fields.email | capitalize }}
              {{ form.errors.messages.email -}}
            </span>
          {%- endif -%}
        {%- endif -%}
      </div>
    {%- endform -%}
  </div>
  <style>
    /* Layout containers */
    .subscribe-section {
      max-width: 1440px;
      margin: 0 auto 10px;
      background: #fff;
      padding: 70px 0;
      border-radius: 14px;
      display: flex;
      justify-content: center;
      align-items: center;
    }
    .subscribe-container {
      width: 100%;
      max-width: 489px;
      margin: 0 auto;
    }

    /* Headers */
    .subscribe-header {
      text-align: center;
      margin-bottom: 34px;
      color: #1c1c1c;
    }
    .subscribe-title {
      font-size: 36px;
      font-weight: 600;
      margin-bottom: 8px;
    }
    .subscribe-subtitle {
      font-size: 22px;
      margin-bottom: 0;
    }

    /* Form and inputs */
    .subscribe-form {
      display: flex;
      flex-direction: column;
      margin: 0 auto;
      gap: 8px;
      max-width: 390px;
    }
    .subscribe-input {
      width: 100%;
      padding: 12px 20px;
      border: 1px solid #d1d5dd;
      border-radius: 8px;
      background: #f9f9f9;
      font-size: 16px;
      line-height: 1.37;
      text-align: right;
      color: #89898c;
      outline: none;
      box-sizing: border-box;
      transition: border 0.2s;
    }
    .subscribe-input:focus {
      border: 1.5px solid #e23a53;
      background: #fff;
    }

    /* Checkbox */
    .subscribe-checkbox-label {
      display: flex;
      align-items: center;
      font-size: 14px;
      color: #6b6b6b;
      cursor: pointer;
      user-select: none;
      gap: 8px;
      margin: 6px 0;
    }
    .subscribe-checkbox {
      display: none;
    }
    .subscribe-checkbox-custom {
      width: 18px;
      height: 18px;
      border: 2px solid #dd2d4a;
      border-radius: 4px;
      background: #fff;
      position: relative;
      display: inline-block;
      margin-left: 4px;
    }
    .subscribe-checkbox:checked + .subscribe-checkbox-custom {
      background: #dd2d4a;
      border-color: #dd2d4a;
    }
    .subscribe-checkbox:checked + .subscribe-checkbox-custom:after {
      content: '';
      position: absolute;
      left: 4px;
      top: 0px;
      width: 6px;
      height: 10px;
      border: solid #fff;
      border-width: 0 2px 2px 0;
      transform: rotate(45deg);
      display: block;
    }
    .subscribe-checkbox-text {
      font-size: 14px;
      color: #5f626a;
    }

    /* Button */
    .subscribe-btn {
      width: 100%;
      background: #dd2d4a;
      color: #fff;
      font-size: 22px;
      font-weight: 700;
      border: none;
      border-radius: 32px;
      padding: 12px 0;
      cursor: pointer;
      margin-top: 0px;
      transition: background 0.2s;
    }
    .subscribe-btn:hover {
      background: #c91e3b;
    }

    /* Feedback messages */
    .subscribe-success {
      color: #1db954;
      font-size: 1.25rem;
      text-align: center;
      display: block;
      margin-bottom: 16px;
    }
    .subscribe-error {
      color: #e23a53;
      font-size: 1.25rem;
      text-align: center;
      display: block;
      margin-top: 8px;
    }

    /* Responsive */
    @media (max-width: 768px) {
      .subscribe-section {
        padding: 30px 16px;
      }
      .subscribe-header {
        margin-bottom: 10px;
      }
      .subscribe-title {
        font-size: 20px;
        line-height: 1.2;
        margin-bottom: 0px;
      }
      .subscribe-subtitle {
        font-size: 20px;
        line-height: 1.2;
      }
      .subscribe-btn {
        font-size: 16px;
        padding: 11px 0;
      }
      .subscribe-form {
        gap: 6px;
      }
      .subscribe-input {
        font-size: 12px;
        padding: 11px 14px;
      }
      .subscribe-checkbox-label {
        font-size: 12px;
        margin: 5px 0;
      }
    }
  </style>
</div>
{%- schema -%}
{
  "name": "Footer sub newsletter"
}
{%- endschema -%}
