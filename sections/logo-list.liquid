<section class="partners-gallery">
  <div class="partners-gallery__container">
    <h2 class="partners-gallery__title">{{ section.settings.title }}</h2>
    <div class="partners-gallery__grid">
      {% for block in section.blocks %}
        <div class="partners-gallery__item">
          {% if block.settings.image %}
            <img 
              src="{{ block.settings.image | img_url: '254x86' }}"
              alt="{{ block.settings.alt_text | default: 'Partner logo' }}"
              class="partners-gallery__image"
              loading="lazy"
            >
          {% else %}
            <div class="partners-gallery__placeholder"></div>
          {% endif %}
        </div>
      {% endfor %}
    </div>
  </div>
</section>

<style>
.partners-gallery {
  padding: 60px 0;
  background-color: #ffffff;
}

.partners-gallery__container {
  max-width: 1200px;
  margin: 0 auto;
}

.partners-gallery__title {
  text-align: center;
  font-size: 34px;
  font-weight: 600;
  margin-bottom: 46px;
  color: #333;
}

.partners-gallery__grid {
  display: grid;
  grid-template-columns: repeat(4, 1fr);
  grid-template-rows: repeat(2, 1fr);
  gap: 54px 61px;
  justify-items: center;
  align-items: center;
}

.partners-gallery__item {
  width: 254px;
  height: 86px;
  display: flex;
  align-items: center;
  justify-content: center;
}

.partners-gallery__image {
  max-width: 100%;
  max-height: 100%;
  object-fit: contain;
  filter: grayscale(100%);
  opacity: 0.7;
  transition: all 0.3s ease;
}

.partners-gallery__image:hover {
  filter: grayscale(0%);
  opacity: 1;
}

.partners-gallery__placeholder {
  width: 100%;
  height: 100%;
  background-color: #f0f0f0;
  border-radius: 4px;
}

/* Tablet Styles */
@media (min-width: 769px) and (max-width: 1024px) {
  .partners-gallery__container {
    padding: 0 20px;
  }
  
  .partners-gallery__grid {
    grid-template-columns: repeat(3, 1fr);
    gap: 40px 30px;
  }
  
  .partners-gallery__item {
    width: 220px;
    height: 75px;
  }
}

/* Mobile Styles */
@media (max-width: 768px) {
  .partners-gallery {
    padding: 40px 0;
  }
  
  .partners-gallery__container {
    padding: 0 15px;
    display: flex;
    flex-direction: column;
    align-items: center;
  }
  
  .partners-gallery__title {
    font-size: 26px;
    margin-bottom: 20px;
  }
  
  .partners-gallery__grid {
    grid-template-columns: repeat(2, 1fr);
    grid-template-rows: repeat(4, 1fr);
    gap: 19px;
    justify-content: center;
    max-width: 328px; /* 154px * 2 + 20px gap */
  }
  
  .partners-gallery__item {
    width: 154px;
    height: 52px;
  }
}
</style>

