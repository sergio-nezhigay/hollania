<div class="px-4 bg-brand-800">
  <div class="pt-7 pb-6 sl-container space-y-4 lg:space-y-0 lg:border-t lg:border-white/25 lg:flex lg:items-center
              lg:justify-between lg:flex-row-reverse xl:pt-4 xl:pb-8">
    <ul class="flex justify-center items-center space-x-reverse space-x-6 lg:hidden">
      {%- for block in section.blocks -%}
        <li>
          {%- if block.settings.url != blank and block.settings.icon != blank -%}
            <a href="{{- block.settings.url -}}" target="_blank" rel="nofollow noreferrer">
              {{- block.settings.icon | image_url: width: '24' | image_tag -}}
            </a>
          {%- endif -%}
        </li>
      {%- endfor -%}
    </ul>

    {% if section.settings.partner_logo != blank and section.settings.partner_url != blank %}
      <a class="block" href="{{- section.settings.partner_url -}}" target="_blank" rel="nofollow noreferrer">
        <img width="100" height="23" src="{{- section.settings.partner_logo | img_url: '100x' -}}"
             alt="{{ section.settings.partner_logo.alt }}" class="mx-auto">
      </a>

    {% endif %}
    <div class="text-xs text-brand-300 text-center">© {{ "now" | date: "%Y" }} {{- section.settings.copy -}} </div>
  </div>
</div>

{%- schema -%}
{
  "name": "Mobile social & copy",
  "settings": [
    {
      "type": "textarea",
      "id": "copy",
      "label": "Copyright line",
      "default": "כל הזכויות שמורות לסילי מזרנים | Sealy Posturepedic"
    },
    {
      "type": "image_picker",
      "id": "partner_logo",
      "label": "Partner logo"
    },
    {
      "type": "url",
      "id": "partner_url",
      "label": "Partner URL"
    }
  ],
  "blocks": [
    {
      "type": "social",
      "name": "Social",
      "settings": [
        {
          "type": "image_picker",
          "id": "icon",
          "label": "Icon"
        },
        {
          "type": "url",
          "id": "url",
          "label": "URL"
        }
      ]
    }
  ]
}
{%- endschema -%}
