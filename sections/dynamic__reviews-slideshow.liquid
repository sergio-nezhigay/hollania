{%- capture cssVariables -%}
  --section-bg-color: {{- section.settings.bg_color -}};
{%- endcapture -%}

<div
    class="pb-8 bg-[--section-bg-color] xl:pb-14 xl:bg-transparent sl-container"
    style="{{ cssVariables | strip }}"
>
  <div class="px-4 pt-8 pb-6 xl:py-14">
    <h2 class="section-title">{{ section.settings.heading }}</h2>
  </div>

  {%- render 'reviews-slideshow' -%}
  {%- if section.settings.link != blank -%}
    {%- render 'button', url: section.settings.link, content: 'לכל חוות הדעת', class: 'btn-primary w-45 mx-auto mt-6 xl:mt-14 xl:w-[200px]' -%}
  {%- endif -%}
</div>

{%- schema %}
{
  "name": "Reviews slideshow",
  "tag": "section",
  "class": "reviews-slideshow-section",
  "settings": [
    {
      "type": "text",
      "id": "heading",
      "label": "Heading",
      "default": "לקוחות שקנו את סיילי מספרים"
    },
    {
      "type": "url",
      "id": "link",
      "label": "Button link",
      "default": "/"
    },
    {
      "type": "color",
      "id": "bg_color",
      "label": "Background color",
      "default": "#F5FAFF"
    }
  ]
}
{%- endschema %}
