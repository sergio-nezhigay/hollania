<div class="sl-container p-4 space-y-4 pb-0 xl:px-8">
  {% render 'breadcrumbs', page_title: 'אוספים' %}
</div>

<div class="sl-container px-4">
  <h1 class="pt-6 text-xl font-medium xl:font-bold xl:text-4xl xl:pt-14">אוספים</h1>

  {%- paginate collections by 18 -%}
    <div class="grid grid-cols-2 gap-y-6 gap-x-4 pb-6 mt-6 text-center sl-container md:grid-cols-2 md:gap-x-6
      lg:grid-cols-3 lg:gap-x-6 lg:gap-y-14 xl:pb-14 xl:mt-14">

      {% for collection in collections %}
        <a href="{{ collection.url }}" class="block">
          <div class="relative overflow-hidden aspect-w-1 aspect-h-1 shadow-sl-12">
            {%-
              render 'image-with-placeholder',
              image: collection.featured_image,
              alt: collection.title,
              width: 1029,
              class: 'object-contain',
              loading: 'lazy'
            -%}
          </div>
          <h2 class="mt-4 text-lg font-medium xl:text-xl">{{ collection.title }}</h2>
        </a>
      {% endfor %}

    </div>

    {% comment %}
      Pagination
    {% endcomment %}
    {% render 'pagination', paginate: paginate, class: 'pb-10' %}
  {%- endpaginate -%}
</div>

