            {
              "value": "image",
              "label": "Image"
            },
            {
              "value": "svg",
              "label": "SVG Code"
            }
          ],
          "default": "image"
        },
        {
          "type": "image_picker",
          "id": "icon_image",
          "label": "Icon Image"
        },
        {
          "type": "html",
          "id": "svg_code",
          "label": "SVG Code",
