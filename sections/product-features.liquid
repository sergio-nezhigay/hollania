{{ 'product-feautures.css' | asset_url | stylesheet_tag }}

<div class="product-features-section" style="background-color: {{ section.settings.background_color }};">
  <div class="container">
    {% if section.settings.title != blank %}
      <h2 class="section-title">{{ section.settings.title }}</h2>
    {% endif %}
    
    {% if section.settings.subtitle != blank %}
      <p class="section-subtitle">{{ section.settings.subtitle }}</p>
    {% endif %}
    
    <div class="features-content {% if section.settings.image_position == 'right' %}reverse{% endif %}">
      {% if section.settings.image != blank %}
        <div class="image-container">
          <img src="{{ section.settings.image | img_url: '600x347' }}" 
               alt="{{ section.settings.image.alt | default: section.settings.title }}"
               loading="lazy">
        </div>
      {% endif %}
      
      <div class="features-list">
        <div class="features-items">
          {% for block in section.blocks %}
            <div class="feature-item" {{ block.shopify_attributes }}>
              <div class="feature-content">
                <div class="feature-main">
                  <div class="feature-icon">
                    {% if block.settings.icon_type == 'svg' %}
                      {{ block.settings.svg_code }}
                    {% elsif block.settings.icon_image != blank %}
                      <img src="{{ block.settings.icon_image | img_url: '30x30' }}" 
                           alt="{{ block.settings.text }}"
                           loading="lazy">
                    {% endif %}
                  </div>
                  <span class="feature-text {% if block.settings.bold_text %}bold{% endif %}">{{ block.settings.text }}</span>
                </div>
                {% if block.settings.description != blank %}
                  <div class="feature-description">{{ block.settings.description }}</div>
                {% endif %}
              </div>
            </div>
          {% endfor %}
        </div>
        
        {% if section.settings.bottom_text != blank %}
          <div class="bottom-text">{{ section.settings.bottom_text }}</div>
        {% endif %}
      </div>
    </div>
  </div>
</div>



{% schema %}
{
  "name": "Product Features",
  "settings": [
    {
      "type": "text",
      "id": "title",
      "label": "Section Title",
      "default": "השכיבה הטובה ביותר בחיינו יש לזה בסיס"
    },
    {
      "type": "textarea",
      "id": "subtitle",
      "label": "Section Subtitle"
    },
    {
      "type": "image_picker",
      "id": "image",
      "label": "Feature Image"
    },
    {
      "type": "color",
      "id": "background_color",
      "label": "Background Color",
      "default": "#f8f8f8"
    },
    {
      "type": "select",
      "id": "image_position",
      "label": "Image Position",
      "options": [
        {
          "value": "left",
          "label": "Left"
        },
        {
          "value": "right",
          "label": "Right"
        }
      ],
      "default": "left"
    },
    {
      "type": "textarea",
      "id": "bottom_text",
      "label": "Text Below Features"
    }
  ],
  "blocks": [
    {
      "type": "feature",
      "name": "Feature Item",
      "settings": [
        {
          "type": "text",
          "id": "text",
          "label": "Feature Text",
          "default": "Feature description"
        },
        {
          "type": "checkbox",
          "id": "bold_text",
          "label": "Make text bold",
          "default": false
        },
        {
          "type": "textarea",
          "id": "description",
