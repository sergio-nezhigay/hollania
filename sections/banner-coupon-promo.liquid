{%-
  render 'banner-coupon',
  heading: section.settings.heading,
  description: section.settings.description,
  coupon_code: section.settings.coupon_code,
  bg_image: section.settings.bg_image
-%}

{%- schema %}
{
  "name": "Coupon promo",
  "tag": "section",
  "settings": [
    {
      "type": "text",
      "id": "heading",
      "label": "Heading",
      "default": "33% הנחה"
    },
    {
      "type": "text",
      "id": "description",
      "label": "Description",
      "default": "חג שמח! מבצע ראש השנה"
    },
    {
      "type": "text",
      "id": "coupon_code",
      "label": "Coupon code",
      "default": "roshhashane"
    },
    {
      "type": "image_picker",
      "id": "bg_image",
      "label": "Background image",
      "info": "Background position is center, no repeat and cover by default"
    }
  ]
}
{%- endschema %}
